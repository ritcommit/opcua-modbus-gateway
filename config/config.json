{
    "modbus": {
        "type": "rtu",
        "address": "/dev/ttyUSB0",
        "baudrate": 9600,
        "parity": "none",
        "slave_id": 1
    },
    "opcua": {
        "port": 4841,
        "security_policy": "none"
    },
    "poll_interval_ms": 1000,
    "data": [
        {
            "mb_register": 40001,
            "mb_dtype": "HR",
            "mb_dlen": 2,
            "ua_nodeid": "ns=1;s=Temperature",
            "ua_dtype": "float",
            "scaling_factor": 0.1
        },
        {
            "mb_register": 40008,
            "mb_dtype": "HR",
            "mb_dlen": 2,
            "ua_nodeid": "ns=1;s=Pressure",
            "ua_dtype": "int",
            "scaling_factor": 1
        },
        {
            "mb_register": 40012,
            "mb_dtype": "HR",
            "mb_dlen": 2,
            "ua_nodeid": "ns=1;s=Altitude",
            "ua_dtype": "float",
            "scaling_factor": 1
        },
        {
            "mb_register": 40024,
            "mb_dtype": "HR",
            "mb_dlen": 2,
            "ua_nodeid": "ns=1;s=Count",
            "ua_dtype": "int",
            "scaling_factor": 1
        }
    ]
}